<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.Detalle">
<!--
    <include
        android:id="@+id/miActionBar"
        layout="@layout/action_bar"
        />

        Agregar al siguiente "TextView":
        android:layout_below="@+id/miActionBar"
-->
    <TextView
        android:id="@+id/detalle_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/dimen_barMarginL"
        android:text="@string/Detalle_name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dimen_text" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/detalle_title"
        android:id="@+id/rv_detalle"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" />
</RelativeLayout>